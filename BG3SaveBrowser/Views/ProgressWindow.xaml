<Window x:Class="BG3SaveBrowser.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BG3SaveBrowser.Views"
        mc:Ignorable="d"
        Title="Processing Files"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        MinWidth="300">
    <StackPanel Margin="10">
        <TextBlock Name="StatusText" Text="Processing files..." Margin="0,0,0,10" 
                   Width="275" TextTrimming="CharacterEllipsis" />
        <ProgressBar Name="FileProgressBar" Height="20" Minimum="0" Maximum="100" 
                     IsIndeterminate="False" Width="275"/>
    </StackPanel>
</Window>