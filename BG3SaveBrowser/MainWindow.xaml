<Window x:Class="BG3SaveBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BG3 Save Browser" Height="450" Width="800">
    <Grid>
        <!-- Top bar with Browse button -->
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Name="BrowseButton" Content="Browse" Width="75" Margin="0,0,10,0" Click="BrowseButton_Click" />
                <TextBox Name="DirectoryPathTextBox" Width="600" IsReadOnly="True" />
            </StackPanel>

            <!-- ListView for displaying files -->
            <ListView Name="FilesListView" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding Name}" Width="300" />
                        <GridViewColumn Header="File Path" DisplayMemberBinding="{Binding Path}" Width="450" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>